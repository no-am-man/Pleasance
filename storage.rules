
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    //====================================================================
    // Generic rule: Allow read access to all files.
    // This is useful for public assets like story audio.
    //====================================================================
    match /{allPaths=**} {
      allow read;
    }
    
    //====================================================================
    // Stories: Allow authenticated users to write to a path that
    // includes their user ID. This is a common pattern for user-owned
    // content.
    //====================================================================
    match /stories/{userId}/{storyId}.wav {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    //====================================================================
    // Community Voice Messages: Allow any authenticated user to write
    // voice messages and comments.
    //====================================================================
    match /communities/{communityId}/messages/{messageId}.wav {
        allow write: if request.auth != null;
    }
    match /communities/{communityId}/messages/{messageId}/comments/{commentId}.wav {
        allow write: if request.auth != null;
    }
  }
}
