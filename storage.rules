
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    //====================================================================
    // Generic rule: Allow read access to all files.
    // This is useful for public assets like story audio and community flags.
    //====================================================================
    match /{allPaths=**} {
      allow read;
    }
    
    //====================================================================
    // Stories: Allow authenticated users to write to a path that
    // includes their user ID. This is a common pattern for user-owned
    // content. The l16 rule is broad to allow server-side uploads.
    //====================================================================
    match /stories/{userId}/{storyId}.l16 {
      allow write: if request.auth != null;
    }

    //====================================================================
    // Community Flags: Allow public write access to unblock uploads.
    // This is a temporary, broader rule to fix a persistent permission error.
    //====================================================================
    match /communities/{communityId}/flag.png {
      allow write: if true;
    }
  }
}
