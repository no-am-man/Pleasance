
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    //====================================================================
    // Generic rule: Allow read access to all files.
    // This is useful for public assets like story audio and community flags.
    //====================================================================
    match /{allPaths=**} {
      allow read;
    }
    
    //====================================================================
    // Stories: Allow any authenticated user to write their own story audio.
    // The server-side action needs to be able to save the generated WAV audio.
    // Restricting to the user's own path provides basic security.
    //====================================================================
    match /stories/{userId}/{storyId}.wav {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    //====================================================================
    // SVG3D Assets: Allow an authenticated user to write to their own assets folder.
    // This secures the endpoint so only the asset owner can upload a JSON file.
    //====================================================================
    match /users/{userId}/svg3d-assets/{assetId}.json {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    //====================================================================
    // Treasury Assets: Allow users to upload their own asset files.
    //====================================================================
    match /users/{userId}/assets/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    //====================================================================
    // Community Flags: Allow public write access to unblock uploads.
    // This is a temporary, broader rule to fix a persistent permission error.
    //================================a====================================
    match /communities/{communityId}/flag.png {
      allow write: if true;
    }
    
    //====================================================================
    // Public Wiki Images: Allow server-side writes for generated images.
    // Public read is handled by the generic rule above.
    //====================================================================
    match /wiki/images/{imageId} {
        allow write: if true; // Allow server-side actions to write images
    }
  }
}
