
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write to their own 'stories' folder.
    // The path ensures that a user can only access files under /stories/{userId}/...
    match /stories/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to write to the messages or comments folders
    // but only the owner can read them back.
    match /communities/{communityId}/messages/{messageId} {
        allow read, write: if request.auth != null;
    }
    match /communities/{communityId}/messages/{messageId}/comments/{commentId} {
        allow read, write: if request.auth != null;
    }
  }
}
