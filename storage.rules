
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    //====================================================================
    // Stories
    //====================================================================
    // Allow an authenticated user to read and write audio files to their
    // own dedicated stories folder. The userId in the path MUST match
    // the authenticated user's UID.
    match /stories/{userId}/{storyId}.wav {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    //====================================================================
    // Community Voice Messages
    //====================================================================
    // Allow any authenticated user to upload voice messages and comments.
    // Read access can be more permissive if needed, but for now, any
    // authenticated user can read any message.
    match /communities/{communityId}/messages/{messageId}.wav {
        allow read, write: if request.auth != null;
    }
    match /communities/{communityId}/messages/{messageId}/comments/{commentId}.wav {
        allow read, write: if request.auth != null;
    }
  }
}
