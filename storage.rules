
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    //====================================================================
    // Generic rule: Allow read access to all files.
    // This is useful for public assets like story audio and community flags.
    //====================================================================
    match /{allPaths=**} {
      allow read;
    }
    
    //====================================================================
    // Stories: Allow authenticated users to write to a path that
    // includes their user ID. This is a common pattern for user-owned
    // content.
    //====================================================================
    match /stories/{userId}/{storyId}.wav {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    //====================================================================
    // Community Flags: Allow a community owner to write a flag image
    // for their own community.
    //====================================================================
    match /communities/{communityId}/flag.png {
      allow write: if request.auth != null && get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
    }
  }
}
