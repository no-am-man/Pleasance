/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for writes,
 * but allows for public readability of shared content like communities and profiles.
 * This supports discoverability while maintaining security.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //================================================================================
    // Helper Functions
    //================================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isFounder() {
      // In a real app, this should be a custom claim, not a hardcoded email.
      return isSignedIn() && request.auth.token.email == 'gg.el0ai.com@gmail.com';
    }
    
    function isCommunityOwner(communityId) {
        // Robust check: Ensure user is signed in AND the community document exists before getting its data.
        return isSignedIn() && exists(/databases/$(database)/documents/communities/$(communityId)) &&
               get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
    }
    
    function isHumanMember(communityId) {
      let communityDoc = get(/databases/$(database)/documents/communities/$(communityId));
      let members = communityDoc.data.members;

      // Check if the user's UID is in the members array, whether it's an array of strings or objects.
      return isSignedIn() &&
             communityDoc != null &&
             "members" in communityDoc.data &&
             (request.auth.uid in members || members.exists(m, m.userId == request.auth.uid));
    }
    
    // A broader check to see if a user is part of the community, either as owner or member.
    function isMember(communityId) {
        return isCommunityOwner(communityId) || isHumanMember(communityId);
    }
    
    //================================================================================
    // Collection Rules
    //================================================================================

    // Rule for private user data.
    match /users/{userId}/{allChildren=**} {
      allow read, write: if isOwner(userId);
    }

    // Rule for publicly readable, but privately writable, user profiles.
    match /community-profiles/{userId} {
        allow get: if true; 
        allow list: if true;
        allow create, update, delete: if isOwner(userId);
    }
    
    // Rule for the main communities collection.
    match /communities/{communityId} {
        allow get: if true;
        allow list: if true;
        allow create: if isSignedIn();
        allow update, delete: if isCommunityOwner(communityId);

        // --- Nested Community Sub-collections ---

        // Forms (Messages) & Comments: Readable by all, writable by members.
        match /forms/{formId}/{allChildren=**} {
            allow read: if true;
            allow write: if isMember(communityId);
        }
        
        // Wiki: Readable by anyone, but only writable by community members.
        match /wiki/{articleId} {
            allow read: if true;
            allow write: if isMember(communityId);
        }

        // Join Requests: Readable by owner, writable by the requesting user
        match /joinRequests/{userId} {
            allow read: if isCommunityOwner(communityId);
            allow create, update: if isOwner(userId);
        }
        
        // Creations (workshop/treasury): Readable by members, writable by members.
        match /creations/{creationId} {
            allow read, write: if isMember(communityId);
        }

        // Roadmap: Readable and writable only by members.
        match /roadmap/{columnId} {
             allow read, write: if isMember(communityId);
        }
    }
    
    // Rule for bug reports.
    match /bugs/{bugId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isFounder();
    }
    
    // Rule for public roadmap.
    match /roadmap/{columnId} {
        allow read, list: if true;
        allow write: if isFounder();
    }

    // Rule for user presence.
    match /presence/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
    }
    
    // Rule for events.
    match /events/{eventId} {
      allow read, list: if true;
      // Allow create/update/delete only by the organizer.
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.organizerId == request.auth.uid;
      // CORRECTED: Allow any signed-in user to modify ONLY the attendees list (and an updatedAt timestamp) to RSVP.
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees', 'updatedAt']);
    }

    // Rule for Ambassador chat history.
    match /ambasedor/{userId} {
        allow read, write: if isOwner(userId); // Strictly private
    }
    
    // Rule for the leaderboard
    match /leaderboard/{userId} {
        allow read: if true;
        allow write: if false; // Only server-side writes
    }

     // Rule for fabrication orders
    match /fabricationOrders/{orderId} {
        allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // Allow updates only by founder/admin for status changes
        allow update: if isFounder(); 
    }
  }
}
