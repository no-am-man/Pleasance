
/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for writes,
 * but allows for public readability of shared content like communities and profiles.
 * This supports discoverability while maintaining security.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //================================================================================
    // Helper Functions
    //================================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isFounder() {
      // In a real app, this should be a custom claim, not a hardcoded email.
      return isSignedIn() && request.auth.token.email == 'gg.el0ai.com@gmail.com';
    }
    
    function isCommunityOwner(communityId) {
        return isSignedIn() && get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
    }

    function isCommunityMember(communityId) {
      // This is a simplified check. A more robust solution would be a members subcollection or checking an array of UIDs.
      // For now, we assume public read access to members array is acceptable for this helper.
      return isSignedIn() && exists(/databases/$(database)/documents/communities/$(communityId)) && (
        request.auth.uid in get(/databases/$(database)/documents/communities/$(communityId)).data.members
      );
    }
    
    //================================================================================
    // Collection Rules
    //================================================================================

    // Rule for private user data.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Nested user-specific collections inherit the parent rule.
      match /{allChildren=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Rule for publicly readable, but privately writable, user profiles.
    match /community-profiles/{userId} {
        allow get: if true; 
        allow list: if isSignedIn();
        allow create, update, delete: if isOwner(userId);
    }
    
    // Rule for the main communities collection.
    match /communities/{communityId} {
        allow get: if true;
        allow list: if true;
        allow create: if isSignedIn();
        allow update, delete: if isCommunityOwner(communityId);

        // Community Assets: Readable by members, writable by the community owner
        match /assets/{assetId} {
          allow read, write: if isCommunityOwner(communityId);
        }

        // Community Creations: Readable by all, writable by members
        match /creations/{creationId} {
            allow read: if true;
            allow write: if isCommunityMember(communityId);
        }
        
        // Community Roadmap: Readable by all, writable by owner
        match /roadmap/{columnId} {
            allow read: if true;
            allow write: if isCommunityOwner(communityId);
        }
        
        // Join Requests: Readable by owner, writable by the requesting user
        match /joinRequests/{userId} {
            allow read: if isCommunityOwner(communityId);
            allow create, update: if isOwner(userId);
        }
        
        // Forms (Messages): Readable by all, writable by members or founder (for system messages)
        match /forms/{formId} {
            allow read: if true;
            allow create: if isCommunityMember(communityId) || isFounder();
            allow update, delete: if isOwner(resource.data.userId);
            
            // Comments: Readable by all, writable by members
            match /comments/{commentId} {
                allow read: if true;
                allow create: if isCommunityMember(communityId);
                allow update, delete: if isOwner(resource.data.userId);
            }
        }
        
        // Wiki Articles: Readable and writable only by community members.
        match /wiki/{articleId} {
            allow read, write: if isCommunityMember(communityId);
        }
    }
    
    // Rule for bug reports.
    match /bugs/{bugId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isFounder();
    }
    
    // Rule for public roadmap.
    match /roadmap/{columnId} {
        allow read, list: if true;
        allow write: if isFounder();
    }

    // Rule for user presence.
    match /presence/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
    }
    
    // Rule for events.
    match /events/{eventId} {
      allow read, list: if true;
      // Allow create/update/delete only by the organizer.
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.organizerId == request.auth.uid;
      // Allow any signed-in user to modify ONLY the attendees list to RSVP.
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']);
    }

    // Rule for Ambassador chat history.
    match /ambasedor/{userId} {
        allow read, write: if isOwner(userId); // Strictly private
    }
    
    // Rule for the leaderboard
    match /leaderboard/{userId} {
        allow read: if true;
        allow write: if false; // Only server-side writes
    }
  }
}
