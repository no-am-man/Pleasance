
/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for writes,
 * but allows for public readability of shared content like communities and profiles.
 * This supports discoverability while maintaining security.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //================================================================================
    // Helper Functions
    //================================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isFounder() {
      // In a real app, this should be a custom claim, not a hardcoded email.
      return isSignedIn() && request.auth.token.email == 'gg.el0ai.com@gmail.com';
    }
    
    function isCommunityOwner(communityId) {
        return isSignedIn() && get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
    }

    function isCommunityMember(communityId) {
      return isSignedIn() && get(/databases/$(database)/documents/communities/$(communityId)).data.members.hasAny([request.auth.uid]);
    }
    
    //================================================================================
    // Collection Rules
    //================================================================================

    // Rule for private user data.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Nested user-specific collections inherit the parent rule.
      match /{allChildren=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Rule for publicly readable, but privately writable, user profiles.
    match /community-profiles/{userId} {
        allow get: if true; // Everyone can read a profile
        allow list: if isSignedIn(); // Logged-in users can list profiles
        allow create, update, delete: if isOwner(userId);
    }
    
    // Rule for the main communities collection.
    match /communities/{communityId} {
        allow get, list: if true; // All communities are publicly visible
        allow create: if isSignedIn(); // Any signed-in user can create a community
        allow update, delete: if isCommunityOwner(communityId); // Only the owner can modify or delete

        // Community Assets: Readable by members, writable by the community owner
        match /assets/{assetId} {
          allow read: if isCommunityMember(communityId);
          allow write: if isCommunityOwner(communityId);
        }

        // Rules for subcollections within a community
        match /{subcollection}/{document=**} {
          // By default, only signed-in users can interact with subcollections
          allow read, write: if isSignedIn();
        }
    }
    
    // Rule for bug reports.
    match /bugs/{bugId} {
      allow read, list: if true; // Bug reports are public
      allow create: if isSignedIn(); // Any signed-in user can create a bug report
      allow update, delete: if isFounder(); // Only founder can modify
    }
    
    // Rule for public roadmap.
    match /roadmap/{columnId} {
        allow read, list: if true;
        allow write: if isFounder(); // Only founder can write to the public roadmap
    }

    // Rule for user presence.
    match /presence/{userId} {
        allow read: if true; // Anyone can see who is online
        allow write: if isOwner(userId); // User can write to their own presence doc
    }
    
    // Rule for events.
    match /events/{eventId} {
      allow read, list: if true;
      allow create, update, delete: if isSignedIn() && (request.resource.data.organizerId == request.auth.uid || resource.data.organizerId == request.auth.uid);
      
      // Allow any signed-in user to add/remove themselves from attendees
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']);
    }

    // Rule for Ambasedor chat history.
    match /ambasedor/{userId} {
        allow read, write: if isOwner(userId); // Strictly private
    }

    // Catch-all to deny any access not explicitly granted above.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
